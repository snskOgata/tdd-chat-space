.user-management-wrapper
  .left-container
    .left-container__upper
      .left-container__upper__title
        %h1 Log in
      .left-container__upper__about
        登録しているユーザーでログイン
    .left-container__lower
      =link_to "Sign up", new_user_registration_path, class: "left-container__lower__link"
  .right-container
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email, "Eメール"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me, "ログイン状態を保持"
      .actions
        = f.submit "Log in"